---
import { Image } from "@astrojs/image/components";

type ImageTileProps = {
  title?: string;
  imgPath?: string;
  key?: string;
  url?: string;
};

const { title, imgPath, url, key }: ImageTileProps = Astro.props;
---

<a href={`/art-of-runeterra${url ?? "/#"}`} >
  <div class="flex flex-col h-64 bg-gray-900 justify-center items-center">
    <Image
      src={imgPath}
      alt=""
      class="h-full object-cover overflow-hidden opacity-40"
      height={325.5}
      aspectRatio={2}
      fit="cover"
      position="centre"
      format="avif"
      quality={50}
    />
    <span class="flex absolute text-white" >{title}</span>
  </div>
</a>
